<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sws.murcs.controller.editor.ProjectEditor">
   <children>
      <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox>
               <children>
                  <Label text="Short Name" />
                  <TextField fx:id="shortNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Long Name" GridPane.rowIndex="1" />
                  <TextField fx:id="longNameTextField" GridPane.columnIndex="1" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Description" />
                  <TextField fx:id="descriptionTextField" />
               </children>
            </VBox>
            <Separator prefWidth="200.0">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Separator>
            <VBox spacing="10.0">
               <children>
                  <Label text="Teams" GridPane.rowIndex="1" />
                  <TableView fx:id="teamsViewer" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="tableColumnTeams" text="Team" />
                      <TableColumn fx:id="tableColumnStartDates" minWidth="0.0" text="Start Date" />
                        <TableColumn fx:id="tableColumnEndDates" text="End Date" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <AnchorPane nodeOrientation="RIGHT_TO_LEFT">
                     <children>
                        <Button mnemonicParsing="false" onAction="#buttonUnscheduleTeamClick" text="Unschedule Team" />
                     </children>
                  </AnchorPane>
                  <Separator prefWidth="200.0">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Separator>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label text="Add Team" />
                              <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <DatePicker fx:id="datePickerStartDate" promptText="Start Date" />
                                    <DatePicker fx:id="datePickerEndDate" promptText="End Date" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <AnchorPane>
                           <children>
                              <ChoiceBox fx:id="choiceBoxAddTeam" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
             <Label fx:id="labelErrorMessage" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
