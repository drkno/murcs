<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPaneMain" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sws.murcs.controller.AppController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
             <Menu id="fileMenu" mnemonicParsing="false" text="File">
                <items>
                    <Menu id="newMenu" mnemonicParsing="false" text="New">
                       <items>
                        <MenuItem fx:id="addProject" mnemonicParsing="false" onAction="#addClicked" text="Project" />
                        <MenuItem fx:id="addTeam" mnemonicParsing="false" onAction="#addClicked" text="Team" />
                        <MenuItem fx:id="addPerson" mnemonicParsing="false" onAction="#addClicked" text="Person" />
                        <MenuItem fx:id="addSkill" mnemonicParsing="false" onAction="#addClicked" text="Skill" />
                        <MenuItem fx:id="addRelease" mnemonicParsing="false" onAction="#addClicked" text="Release" />
                           <MenuItem fx:id="addStory" mnemonicParsing="false" onAction="#addClicked" text="Story" />
                       </items>
                    </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#openProject" text="Open Project" />
                    <MenuItem mnemonicParsing="false" onAction="#saveProject" text="Save Project" />
                    <MenuItem mnemonicParsing="false" onAction="#generateReport" text="Generate Report" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="fileQuit" mnemonicParsing="false" onAction="#fileQuitPress" text="Quit" />
                </items>
             </Menu>
            <Menu id="editMenu" mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" onAction="#undoMenuItemClicked" text="Undo" />
                  <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" onAction="#redoMenuItemClicked" text="Redo" />
              </items>
            </Menu>
             <Menu id="viewMenu" mnemonicParsing="false" text="View">
                <items>
                    <MenuItem id="viewShowHide" mnemonicParsing="false" onAction="#toggleItemListView" text="Show/Hide Item List" />
                </items>
             </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <HBox fx:id="hBoxMainDisplay" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <VBox fx:id="vBoxSideDisplay" HBox.hgrow="NEVER">
                <children>
                    <AnchorPane>
                       <children>
                           <ChoiceBox fx:id="displayChoiceBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS" />
                       </children>
                    </AnchorPane>
                    <ListView fx:id="displayList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="TOP_RIGHT" spacing="5.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addClicked" text="+" />
                        <Button fx:id="removeButton" disable="true" mnemonicParsing="false" onAction="#removeClicked" text="X" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </HBox>
                </children>
             </VBox>
             <GridPane fx:id="contentPane" HBox.hgrow="ALWAYS">
               <columnConstraints>
                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
             </GridPane>
         </children>
      </HBox>
   </center>
</BorderPane>
