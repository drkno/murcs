<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="375.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sws.murcs.controller.editor.PersonEditor">
   <children>
       <ScrollPane fitToWidth="true" prefViewportHeight="250.0" prefViewportWidth="169.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
       <content>
          <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
             <children>
                <VBox>
                   <children>
                      <Label text="Name" />
                      <TextField fx:id="shortNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                   </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                  <VBox>
                     <children>
                        <Label text="Full Name" />
                        <TextField fx:id="longNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </VBox>
                <VBox>
                   <children>
                      <Label text="User ID" GridPane.rowIndex="1" />
                      <TextField fx:id="userIdTextField" GridPane.columnIndex="1" />
                   </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Skills" GridPane.rowIndex="1" />
                        <ScrollPane fitToWidth="true" maxHeight="100.0">
                           <content>
                              <VBox fx:id="allocatedSkillsContainer" />
                           </content>
                        </ScrollPane>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add a skill">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Text>
                        <AnchorPane>
                            <children>
                                <ChoiceBox fx:id="skillChoiceBox" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                 <Label fx:id="labelErrorMessage" />
             </children>
          </VBox>
         </content>
       </ScrollPane>
   </children>
</AnchorPane>
