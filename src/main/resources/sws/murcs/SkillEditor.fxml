<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="sws.murcs.controller.editor.SkillEditor" fx:id="editor" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="-Infinity" prefHeight="50.0" vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="0.0" fitToHeight="true" fitToWidth="true" prefViewportHeight="241.0"
                            prefViewportWidth="220.0" styleClass="edge-to-edge">
                    <content>
                        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                  AnchorPane.topAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox>
                                    <children>
                                        <Label focusTraversable="false" text="Short Name"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                                                   fx:id="shortNameTextField"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <VBox GridPane.rowIndex="1">
                                    <children>
                                        <Label GridPane.rowIndex="1" focusTraversable="false" text="Long Name"/>
                                        <TextField GridPane.columnIndex="1" fx:id="longNameTextField"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <GridPane GridPane.rowIndex="2">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="NEVER"/>
                                        <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                                    </rowConstraints>
                                    <children>
                                        <Label focusTraversable="false" text="Description"/>
                                        <TextArea GridPane.rowIndex="1" fx:id="descriptionTextArea" prefHeight="100.0"
                                                  prefWidth="200.0" wrapText="true"/>
                                    </children>
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                </GridPane>
                            </children>
                        </GridPane>
                    </content>
                </ScrollPane>
                <ScrollPane GridPane.rowIndex="1" fitToHeight="true" fitToWidth="true" prefViewportHeight="17.0"
                            prefViewportWidth="10.0" styleClass="edge-to-edge">
                    <content>
                        <GridPane>
                            <children>
                                <HBox VBox.vgrow="SOMETIMES" alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label focusTraversable="false" fx:id="labelErrorMessage" textFill="RED">
                                            <padding>
                                                <Insets left="10.0"/>
                                            </padding>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" top="5.0"/>
                                    </VBox.margin>
                                </HBox>
                                <HBox GridPane.columnIndex="1" alignment="CENTER_RIGHT" fx:id="bottomBar"
                                      spacing="10.0">
                                    <padding>
                                        <Insets right="10.0"/>
                                    </padding>
                                </HBox>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </ScrollPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
