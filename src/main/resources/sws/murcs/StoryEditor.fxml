<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="editor" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sws.murcs.controller.editor.StoryEditor">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox>
                    <children>
                        <Label text="Short Name" />
                        <TextField fx:id="shortNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Description" />
                  <TextArea fx:id="descriptionTextArea" prefHeight="100.0" prefWidth="200.0" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox >
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Creator">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Text>
                        <AnchorPane>
                            <children>
                                <ChoiceBox fx:id="creatorChoiceBox" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <Label fx:id="labelErrorMessage">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin></Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
