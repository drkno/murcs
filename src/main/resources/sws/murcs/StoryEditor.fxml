<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="editor" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sws.murcs.controller.editor.StoryEditor">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox>
                    <children>
                        <Label text="Short Name" />
                        <TextField fx:id="shortNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
            <VBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="State">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Text>
                  <AnchorPane>
                     <children>
                        <ChoiceBox fx:id="storyStateChoiceBox" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </VBox>
                <VBox>
                    <children>
                        <Label text="Description" />
                  <TextArea fx:id="descriptionTextArea" prefHeight="100.0" prefWidth="200.0" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Creator">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Text>
                        <AnchorPane>
                            <children>
                                <ChoiceBox fx:id="creatorChoiceBox" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
            <TitledPane text="Acceptance Criteria">
               <content>
                  <VBox>
                     <children>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <TableView fx:id="acceptanceCriteriaTable" prefHeight="200.0" prefWidth="200.0">
                                <columns>
                                  <TableColumn fx:id="conditionColumn" minWidth="300.0" prefWidth="-1.0" sortable="false" text="Condition" />
                                    <TableColumn fx:id="removeColumn" prefWidth="75.0" sortable="false" />
                                </columns>
                              </TableView>
                              <VBox prefHeight="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER">
                                 <children>
                                    <Button fx:id="increasePriorityButton" disable="true" mnemonicParsing="false" onAction="#increasePriorityClicked" prefWidth="30.0" text="^" />
                                    <Button fx:id="decreasePriorityButton" disable="true" mnemonicParsing="false" onAction="#decreasePriorityClicked" prefWidth="30.0" text="v">
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                                 <GridPane.margin>
                                    <Insets left="5.0" />
                                 </GridPane.margin>
                              </VBox>
                           </children>
                        </GridPane>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <TextField fx:id="addConditionTextField" GridPane.rowIndex="1" />
                              <Button mnemonicParsing="false" onAction="#addConditionButtonClicked" text="Add" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                 <GridPane.margin>
                                    <Insets left="10.0" />
                                 </GridPane.margin>
                              </Button>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Condition" GridPane.columnSpan="2" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </GridPane>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
                <Label fx:id="labelErrorMessage">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin></Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
