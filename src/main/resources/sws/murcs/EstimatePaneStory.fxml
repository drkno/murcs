<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="storyContainer" alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="storyLabel" maxWidth="1.7976931348623157E308" text="Label" HBox.hgrow="ALWAYS">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin>
      </Label>
      <Button fx:id="navigateToStoryButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#navigateToStory" prefHeight="40.0" prefWidth="40.0">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@icons/navigateBlack.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="%Navigatetostory" />
         </tooltip>
         <styleClass>
            <String fx:value="mdr-button" />
            <String fx:value="button-round-small" />
         </styleClass>
      </Button>
      <Button fx:id="removeFromWorkSpaceButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeStoryFromWorkspace" prefHeight="40.0" prefWidth="40.0" GridPane.columnIndex="1">
         <styleClass>
            <String fx:value="mdr-button" />
            <String fx:value="mdge-button" />
         </styleClass>
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@icons/minusWhite.png" />
               </image>
            </ImageView>
         </graphic>
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin>
         <tooltip>
            <Tooltip text="%Removethisstoryfromtheworkspace" />
         </tooltip>
      </Button>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
